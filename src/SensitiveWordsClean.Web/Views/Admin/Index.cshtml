@model List<SensitiveWordsClean.Application.DTOs.SensitiveWordDto>
@{
    ViewData["Title"] = "Sensitive Words Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@ViewData["Title"]</h2>
        <button type="button" class="btn btn-primary" onclick="openCreateDialog()">
            <i class="fas fa-plus"></i> Add New Word
        </button>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Word</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var word in Model)
                            {
                                <tr>
                                    <td>@word.Id</td>
                                    <td><code>@word.Word</code></td>
                                    <td>@word.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-outline-primary" onclick="openEditDialog(@word.Id, '@Html.Raw(Html.Encode(word.Word))')">
                                                <i class="fas fa-edit"></i> Edit
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-danger" onclick="confirmDelete(@word.Id)">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No sensitive words found</h5>
                    <p class="text-muted">Get started by adding your first sensitive word.</p>
                    <button type="button" class="btn btn-primary" onclick="openCreateDialog()">
                        <i class="fas fa-plus"></i> Add New Word
                    </button>
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this sensitive word?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Sensitive Word</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="editForm" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="editWord" class="form-label">Word</label>
                        <input type="text" class="form-control" id="editWord" name="Word" required maxlength="255">
                        <div class="form-text">Enter the sensitive word to filter.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Sensitive Word</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="createForm" method="post" action="/Admin/Create">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="createWord" class="form-label">Word</label>
                        <input type="text" class="form-control" id="createWord" name="Word" required maxlength="255" placeholder="Enter new sensitive word">
                        <div class="form-text">Enter the sensitive word to add to the filter list.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add Word
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id) {
            $('#deleteForm').attr('action', '/Admin/Delete/' + id);
            $('#deleteModal').modal('show');
        }

        function openEditDialog(id, currentWord) {
            $('#editForm').attr('action', '/Admin/Edit/' + id);
            $('#editWord').val(currentWord);
            $('#editModal').modal('show');
        }

        function openCreateDialog() {
            $('#createWord').val('');
            $('#createModal').modal('show');
        }

        $(document).ready(function() {
            // Handle edit form submission
            $('#editForm').on('submit', function() {
                const submitButton = $(this).find('button[type="submit"]');
                const originalText = submitButton.html();
                
                // Show loading state
                submitButton.html('<i class="fas fa-spinner fa-spin"></i> Saving...').prop('disabled', true);
                
                // Let the form submit naturally
                return true;
            });

            // Handle create form submission
            $('#createForm').on('submit', function() {
                const submitButton = $(this).find('button[type="submit"]');
                const originalText = submitButton.html();
                
                // Show loading state
                submitButton.html('<i class="fas fa-spinner fa-spin"></i> Adding...').prop('disabled', true);
                
                // Let the form submit naturally
                return true;
            });
            
            // Clear edit form when modal is hidden
            $('#editModal').on('hidden.bs.modal', function() {
                $('#editWord').val('');
                $('#editForm button[type="submit"]').html('<i class="fas fa-save"></i> Save Changes').prop('disabled', false);
            });

            // Clear create form when modal is hidden
            $('#createModal').on('hidden.bs.modal', function() {
                $('#createWord').val('');
                $('#createForm button[type="submit"]').html('<i class="fas fa-plus"></i> Add Word').prop('disabled', false);
            });
        });
    </script>
}
