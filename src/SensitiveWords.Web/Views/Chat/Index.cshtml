@model SensitiveWordsClean.Web.Models.ChatViewModel
@{
    ViewData["Title"] = "Mock Chat - Text Sanitization Demo";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-comments"></i> @ViewData["Title"]
                    </h4>
                    <small>This demo shows how sensitive words are automatically filtered in real-time</small>
                </div>
                <div class="card-body">
                    <!-- Chat Messages Area -->
                    <div class="chat-container mb-3" style="height: 400px; overflow-y: auto; border: 1px solid #dee2e6; border-radius: 0.375rem; padding: 15px; background-color: #f8f9fa;">
                        @if (Model.Messages.Any())
                        {
                            @foreach (var message in Model.Messages)
                            {
                                <div class="message mb-3 @(message.IsUser ? "text-end" : "")">
                                    <div class="d-inline-block p-2 rounded @(message.IsUser ? "bg-primary text-white" : "bg-light border")" style="max-width: 70%;">
                                        <div class="message-text">@message.Message</div>
                                        <small class="d-block mt-1 @(message.IsUser ? "text-light" : "text-muted")" style="font-size: 0.75em;">
                                            @(message.IsUser ? "You" : "Bot") - @message.Timestamp.ToString("HH:mm")
                                        </small>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center text-muted">
                                <i class="fas fa-robot fa-2x mb-2"></i>
                                <p>Welcome to the chat demo! Type a message below to see how sensitive words are automatically filtered.</p>
                                <p><small>Try typing words like "badword1", "badword2", or "spam" to see the filtering in action.</small></p>
                            </div>
                        }
                    </div>

                    <!-- Message Input Form -->
                    <form asp-action="SendMessage" method="post" class="d-flex">
                        @Html.AntiForgeryToken()
                        <div class="input-group">
                            <input asp-for="UserMessage" class="form-control" placeholder="Type your message here..." autocomplete="off">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane"></i> Send
                            </button>
                        </div>
                    </form>

                    <div class="mt-2">
                        <small class="text-muted">
                            <i class="fas fa-shield-alt"></i> 
                            All messages are automatically scanned for sensitive words and filtered in real-time.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-scroll to bottom of chat when new messages are added
        window.onload = function() {
            var chatContainer = document.querySelector('.chat-container');
            if (chatContainer) {
                chatContainer.scrollTop = chatContainer.scrollHeight;
            }
        };

        // Focus on input field
        document.addEventListener('DOMContentLoaded', function() {
            var messageInput = document.querySelector('input[name="UserMessage"]');
            if (messageInput) {
                messageInput.focus();
            }
        });
    </script>
}
