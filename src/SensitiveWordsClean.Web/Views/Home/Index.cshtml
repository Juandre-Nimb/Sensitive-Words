@{
    ViewData["Title"] = "Home";
}

<div class="container mt-4">
    <div class="jumbotron bg-primary text-white p-5 rounded mb-4">
        <div class="text-center">
            <h1 class="display-4">
                <i class="fas fa-shield-alt"></i> Sensitive Words Clean
            </h1>
            <p class="lead">Advanced text sanitization and content moderation system</p>
            <hr class="my-4 bg-white">
            <p>Protect your platform from inappropriate content with our intelligent word filtering system.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-cog fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Admin Panel</h5>
                    <p class="card-text">Manage your sensitive words database. Add, edit, or remove words that should be filtered from user content.</p>
                    <a asp-controller="Admin" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-arrow-right"></i> Go to Admin
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-comments fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Chat Demo</h5>
                    <p class="card-text">Test the word filtering system in action with our interactive chat demonstration.</p>
                    <a asp-controller="Chat" asp-action="Index" class="btn btn-success">
                        <i class="fas fa-arrow-right"></i> Try Chat Demo
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-body text-center">
                    <i class="fas fa-code fa-3x text-info mb-3"></i>
                    <h5 class="card-title">API Documentation</h5>
                    <p class="card-text">Explore the RESTful API endpoints with interactive Swagger documentation.</p>
                    <a href="https://localhost:7203/swagger/index.html" target="_blank" class="btn btn-info">
                        <i class="fas fa-external-link-alt"></i> View API Docs
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
